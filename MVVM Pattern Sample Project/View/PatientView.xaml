<UserControl x:Class="MVVM_Pattern_Sample_Project.View.PatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Pattern_Sample_Project.View"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             Width="582.627">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="200" />
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*" />

        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0"
                HorizontalAlignment="Left"
                Margin="25,25"
                Height="100" Width="100">
        </Image>

        <StackPanel Grid.Row="0"
                    Grid.Column="1">
            
            <TextBlock>
               Ana Santos Quiñones
            </TextBlock>
        </StackPanel>
        
        <TabControl Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Margin="10,0,10,0">

            <TabItem Header="Demographics">
                <StackPanel HorizontalAlignment="Left">
                    <ItemsControl ItemsSource="{Binding Path=PatientViewModel}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                               <TextBlock>Full Name</TextBlock>
                               <TextBox Text="{Binding Path=FullName}">fasd</TextBox>

                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
              
                    </ItemsControl>
                </StackPanel>

            
            </TabItem>
            

            <TabItem Header="Diagnostics" />
            <TabItem Header="Allergies" />

        </TabControl>



        <Button Grid.Row="2" 
            HorizontalAlignment="Right"
                />

    </Grid>
    
   
</UserControl>
